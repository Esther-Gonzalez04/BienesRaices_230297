extends ../layout/index

block contenido
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-p_yellow Bienes
            span.font-normal.text-black Raices
        h2.text-center.font-extrabold.text-2xl= page

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/newUser").space-y-5.px-6
                    div 
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Nombre completo:
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="text"  placeholder="Ej. Esther González Peralta" name="nombre_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Correo electrónico:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="email"  placeholder="Ej: esther@gmail.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Contraseña:
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="password"  placeholder="Mínimo de 8 carácteres" name="pss_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-600.md-2.font-nold Confirmación contraseña:
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="password"  placeholder="Mínimo de 8 carácteres" name="pss2_usuario")

                    div.flex.items-center.justify-between
                        a.text-p_blue-200.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-red-500") ¿Ya tienes cuenta? Inicia sesión
                        a.text-p_blue-200.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-red-500") Olvide mi contraseña
                    
                    input(class="w-full bg-p_yellow hover:bg-p_blue-200 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")







